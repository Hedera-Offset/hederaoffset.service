// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int      @id @default(autoincrement())
  email            String   @unique
  name             String?
  password         String
  role             Role     @default(BUYER)
  isEmailVerified  Boolean  @default(false)
  publicKey        String?
  machineAuthToken String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  Token            Token[]
  Devices          Device[]
}

model Token {
  id          Int       @id @default(autoincrement())
  token       String
  type        TokenType
  expires     DateTime
  blacklisted Boolean
  createdAt   DateTime  @default(now())
  user        User      @relation(fields: [userId], references: [id])
  userId      Int
}

model Device {
  id        Int    @id @default(autoincrement())

  user   User @relation(fields: [userId], references: [id])
  userId Int

  // METADATA

  // location 
  country String
  region  String
  city    String

  category     String
  manufacturer String
  accountId    String @unique
  accountKey   String
  publicKey    String @unique

  data NotarizedData[]
}

model NotarizedData {
  id Int @id @default(autoincrement())

  device   Device @relation(fields: [deviceId], references: [id])
  deviceId Int

  meter_type String?

  time       DateTime
  temprature Decimal?

  totalEnergy   Decimal?
  today         Decimal?
  power         Int?
  apparentPower Int?
  reactivePower Int?
  factor        Decimal?
  voltage       Int?
  current       Decimal?

  raw String?
}

enum Role {
  GENERATOR
  BUYER
}

enum TokenType {
  ACCESS
  REFRESH
  RESET_PASSWORD
  VERIFY_EMAIL
}
